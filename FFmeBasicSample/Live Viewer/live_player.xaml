<UserControl x:Class="FFmePlayer_snu.Controls.live_player"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFmePlayer_snu.Controls"
        xmlns:ffme="clr-namespace:Unosquare.FFME;assembly=ffme.win"
        Height="270" Width="448">
    
    <Grid>
        <Grid x:Name="grid" Width="448" Height="270" VerticalAlignment="Top">
            <ffme:MediaElement  x:Name="Media" LoadedBehavior="Play" Width="448" Height="250" />
            <Button x:Name="Volume" Content="🔊" HorizontalAlignment="Left" Margin="10,0,0,10" Width="43" Height="30" VerticalAlignment="Bottom" Click="Volume_Click"/>
        </Grid>
        <Grid x:Name="grid2" Width="120" Height="90" VerticalAlignment="Top" HorizontalAlignment="Right" >
            <ffme:MediaElement  x:Name="Media2" LoadedBehavior="Play"  Width="120" Height="90" />
        </Grid>
    </Grid>

    
</UserControl>
